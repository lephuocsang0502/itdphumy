@model ITD.PhuMyPort.API.ViewModels.PLCViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" onsubmit="return jQueryAjaxPost(this);" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.PLC.Code" class="control-label"></label>
                <input asp-for="@Model.PLC.Code" class="form-control" />
                <span asp-validation-for="@Model.PLC.Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.PLC.IP" class="control-label"></label>
                <input asp-for="@Model.PLC.IP" class="form-control" />
                <span asp-validation-for="@Model.PLC.IP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.PLC.Barrier" class="control-label"></label>
                <input asp-for="@Model.PLC.Barrier" class="form-control" value="1" />
                <span asp-validation-for="@Model.PLC.Barrier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.PLC.WorkplaceCode" class="control-label"></label>
                <select asp-for="@Model.PLC.WorkplaceCode" class="form-control" asp-items="@Model.WorkplaceList"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


