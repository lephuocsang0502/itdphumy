@model ITD.PhuMyPort.API.ViewModels.CameraViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" onsubmit="return jQueryAjaxPost(this);" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Camera.Code" class="control-label"></label>
                <input asp-for="@Model.Camera.Code" class="form-control" />
                <span asp-validation-for="@Model.Camera.Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Camera.Name" class="control-label"></label>
                <input asp-for="@Model.Camera.Name" class="form-control" />
                <span asp-validation-for="@Model.Camera.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Camera.IP" class="control-label"></label>
                <input asp-for="@Model.Camera.IP" class="form-control" />
                <span asp-validation-for="@Model.Camera.IP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Camera.Port" class="control-label"></label>
                <input asp-for="@Model.Camera.Port" class="form-control" value="80" />
                <span asp-validation-for="@Model.Camera.Port" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Camera.Username" class="control-label"></label>
                <input asp-for="@Model.Camera.Username" class="form-control" />
                <span asp-validation-for="@Model.Camera.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Camera.Password" class="control-label"></label>
                <input maxlength="50" type="password" asp-for="@Model.Camera.Password" class="form-control" />
                <span asp-validation-for="@Model.Camera.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Camera.WorkplaceCode" class="control-label"></label>
                <select asp-for="@Model.Camera.WorkplaceCode" class="form-control" asp-items="@Model.WorkplaceList"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


